<%= link_to 'Add New Post', new_post_path %>
<table>
	<tr>
		<th>User</th>
		<th>Title</th>
		<th>Text</th>
		<th colspan="2"></th>
	</tr>
	<% @posts.each do |post|%>
		<tr>
			<td><%= post.user.name %></td>
			<td><%= post.title%></td>
			<td><%= post.data %></td>
			<td><%= link_to 'Show',post_path(post)%></td>
		</tr>
	<% end %>
</table>
<%= link_to 'Back', user_path(current_user) %>